<Window x:Class="LiteCap.auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LiteCap"
        mc:Ignorable="d"
        Title="auth" Height="140" Width="200" Topmost="True">
    <Grid>
        <Button x:Name="pin_gen" Content="認証用URLを発行" Margin="10" VerticalAlignment="Top" Click="pin_gen_Click"/>
        <TextBox x:Name="pin_box" Margin="10,35,10,10" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18.667" ToolTip="PIN" IsEnabled="False" MaxLength="7" TextChanged="pin_box_TextChanged"/>
        <Button x:Name="auth1" Content="Button" Margin="10,67,10,10" IsEnabled="False" Click="auth1_Click"/>

    </Grid>
</Window>
